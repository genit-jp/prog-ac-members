
<%= bootstrap_form_for(profile) do |form| %>
      <% if profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
          <ul>
          <% profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
  
      <% end %>
        <%= form.text_field :name, label: "名前", readonly: readonly %>
        <%= form.text_field :name_kana, label: "よみがな", readonly: readonly %>
        <%= form.text_field :title, label: "学校・仕事等", readonly: readonly %>
        <%= form.text_field :goal, label: "目標(こうなりたい！)", readonly: readonly %>
        <%= form.text_field :message, label: "メッセージ(よろしく等)", readonly: readonly %>
        <%= form.file_field :icon_image, label: "顔画像", readonly: readonly %>
        <%= form.file_field :pr_sheet_image, label: "自己紹介シート", readonly: readonly %>
        <%= form.text_area :description, label: "自由欄", rows: 10, readonly: readonly %>
      <% if readonly == false %>
        <div class="actions">
          <%= form.submit '更新', :class => 'btn btn-primary' %>
      <% end  %>
    </div>
<% end %>
