<div class="card">
  <div class="card-body">
    <img src="<%= @profile.icon_image %>" style="max-width:600px;max-height:600px;">
    <p class="card-text"><%= @profile.name_kana %></p>
    <h1 class="card-title"><%= @profile.name %></h1>
    <h5><i class="fab fa-github"></i><%= @profile.github_id %></h5>
    <p class="card-title"><%= @profile.title %></p>
    <p class="card-text"><%= @profile.goal %></p>
    <p class="card-text"><%= @profile.message %></p>
    <img src="<%= @profile.pr_sheet_image %>" style="width:100%;height:auto;">
    <p class="card-text"><%= @profile.description %></p>
  </div>
</div>
<% if current_user.id == @profile.user_id %>
<%= link_to_if current_user.id == @profile.user_id, '編集', edit_profile_path(@profile), class: 'btn btn-outline-secondary' %>
<% end %>

<h3>目標一覧</h3>
<div class="list-group">
  <% @purposes.each do |purpose| %>
    <a class="list-group-item list-group-item-action" href="<%= edit_purpose_path(purpose) %>">
      <div class="d-flex w-100 justify-content-between">
        <p class="mb-1"><%= purpose.goal1m %></p>
        <small>
          <%= ApplicationHelper.makeDateTimePastTime(purpose.created_at) %>
        </small>
      </div>
    </a>
  <% end %>
</div>
<% if current_user.id == @profile.user_id %>
<%= link_to_if current_user.id == @profile.user_id, '目標追加', new_purpose_path(), class: 'btn btn-outline-secondary' %>
<% end %>
<%= link_to '戻る', home_index_path, class: 'btn btn-outline-secondary' %>
